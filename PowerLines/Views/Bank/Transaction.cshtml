@model PowerLines.Models.Transaction

@{
    ViewBag.Title = "Transaction";
}

<h2>New @ViewBag.Type</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.BankId)
        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.Description)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Value, new { @class = "form-control", @Value= "" , autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" name="type" class="btn btn-default" value="@ViewBag.Type" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Validating...">@ViewBag.Type</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel transaction", "Index")
</div>

<script>
    $('button').click(function () {
        $(this).button('loading');
    });
</script>